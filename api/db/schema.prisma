model Agent {
  id       Int       @id @default(autoincrement())
  name     String?
  email    String?    @unique
  listId   Int    // Unique identifier from Property Radar
  Contacts Contact[]
}

model Contact {
  id       Int       @id @default(autoincrement())
  name     String
  address  String
  personKey  Int?   // Unique identifier from Property Radar
  Agent    Agent     @relation(fields: [agentId], references: [id])
  agentId  Int
  Properties Property[]
}

model Property {
  id         Int      @id @default(autoincrement())
  radarID    String   // Unique identifier for the property
  Contact    Contact  @relation(fields: [contactId], references: [id])
  contactId  Int
  // ... other property details
}

